<% layout("layouts/boilerplate") %>

<body>
    <form method="POST" action="/listing">

        <h1>Add New Room Details</h1>

        <h3>Title : </h3>
        <input type="text" placeholder="title" name="listing[title]">
        <br>
        <h3>Description : </h3>
        <textarea name="listing[description]" placeholder="description" rows="5" cols="50"></textarea>
        <br><br>
        <h3>Image url : </h3>
        <input type="text" placeholder="image" name="listing[image]">
        <br>
        <h3>Price : </h3>
        <input type="text" placeholder="price" name="listing[price]">
        <br>
        <h3>location : </h3>
        <input type="text" placeholder="location" name="listing[location]">
        <br>
        <h3>Country : </h3>
        <input type="text" placeholder="country" name="listing[country]">
        <br><br>

        <button> Add </button>
    </form>
</body>