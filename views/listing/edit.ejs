<% layout("layouts/boilerplate") %>
<body>
    <form method="POST" action="/listing/<%=list._id%>?_method=PATCH">

        <h1>Add New Room Details</h1>

        <h4>Title : </h4>
        <input type="text" value="<%=list.title%>" name="listing[title]">
        <br><br>
        <h4>Description : </h4>
        <textarea name="listing[description]" rows="5" cols="50"><%=list.description%></textarea>
        <br><br>
        <h4>Image url : </h4>
        <input type="text" value="<%=list.image%>" name="listing[image]">
        <br>
        <h4>Price : </h4>
        <input type="text" value="<%=list.price%>" name="listing[price]">
        <br>
        <h4>location : </h4>
        <input type="text" value="<%=list.location%>" name="listing[location]">
        <br>
        <h4>Country : </h4>
        <input type="text" value="<%=list.country%>" name="listing[country]">
        <br><br>

        <button> Finish </button>
        <br><br>
    </form>
</body>