<% layout("layouts/boilerplate") %>
<body>
    <form method="POST" action="/listing/<%=list._id%>?_method=PATCH">

        <h2>Add New Room Details</h2>
        <br>

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" value=<%=list.title %> name="listing[title]" class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"><%=list.description %>  </textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image Url</label>
            <input type="text" value=<%=list.image %>  name="listing[image]" class="form-control">
        </div>

        <div class="row ">
            
            <div class="mb-3 col-md-2">
                <label for="price" class="form-label">price</label>
                <input type="number" value=<%=list.price %>  name="listing[price]" class="form-control">
            </div>
            
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location</label>
                <input type="text" value=<%=list.location %>  name="listing[location]" class="form-control">
            </div>

        </div>

        <div class="mb-3">
            <label for="country" class="form-label">country</label>
            <input type="text" value=<%=list.country %>  name="listing[country]" class="form-control">
        </div>
        <br>

        <button class="btn btn-dark" class="mb-5"> Finish</button>
        <br>

    </form>
</body>