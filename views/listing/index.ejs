
<% layout("layouts/boilerplate") %>
<body>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

        <% for(let list of listings){ %>

            <a href="/listing/<%=list._id%>">

                <div class="card col" style="border: none">
                    <img src=<%= list.image %> class="card-img-top" alt="Hotel_Image">
                    <div class="card-img-overlay"><i class="fa-regular fa-heart heart-icon" style="color:white;font-size: 1.5rem;font-weight: 800;"></i></div>
                    <div class="card-body">
                        <p class="card-text">
                        <b>
                        <%= list.title %>
                        <br>
                        &#8377;<%= list.price.toLocaleString("en-IN") %>
                        </b>
                        </p>
                    </div>
                </div>
            </a>
            
                
        <%}%>

    </div>


       

    
</body>

